@model InfoTrack.Seo.Web.Interfaces.ISearchViewModel

@{

    List<int> positions = ViewData["Positions"] as List<int>;
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "SearchForm" }))
{
    <label>Url</label><span class="">Example: www.infotrack.com.au</span>
    @Html.TextBoxFor(m => m.Url);
    <label>Keywords</label><span class="">Example: online title search</span>
    @Html.TextBoxFor(m => m.Keywords);
    <button type="submit" class="btn btn-default">Submit</button>
}


@if(!string.IsNullOrEmpty(Model.Keywords) && !string.IsNullOrEmpty(Model.Url)) {
<div class="searchResults">
    <p>
        @if (positions != null)
        {
            <span class="positions">Google position(s): @string.Join(",", positions)</span>
        }else {
            <span class="positions">No results</span>
        }
    </p>
</div>
}


